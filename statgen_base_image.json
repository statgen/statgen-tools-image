{
    "variables": {
        "zone": "",
        "project_id": ""
    },
    "builders": [{
        "type": "googlecompute",
        "project_id": "{{user `project_id`}}",
        "zone": "{{user `zone`}}",
        "image_name": "statgen-base-image-test",
        "image_description": "Base image for UM Statgen",
        "machine_type": "n1-standard-4",
        "source_image": "ubuntu-1604-xenial-v20181004",
        "source_image_family": "ubuntu-16.04-lts",
        "disk_size": "100",
        "disk_type": "pd-standard",
        "ssh_username": "root"
    },{
        "type": "docker",
        "image": "ubuntu:16.04",
        "commit": "true"
    }],
    "provisioners": [{
        "type": "shell",
        "script": "setup.sh"
    }],
    "post-processors": [{
        "type": "docker-tag",
        "repository": "statgen-tools",
        "tag": "test"
    }]
}
